<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - WoodGrove Administration</title>
    <environment include="Development">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.0/css/mdb.css">
        <link rel="stylesheet" href="~/css/style.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
              asp-fallback-href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css"
              asp-fallback-href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.0/css/mdb.min.css">
        <link rel="stylesheet" href="~/css/style.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <header>
        <div class="position-fixed sidebar-fixed">
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action waves-effect" asp-controller="Home" asp-action="Index"><i class="fa fa-pie-chart mr-3"></i>Dashboard</a>
                <a class="list-group-item list-group-item-action waves-effect" asp-controller="User" asp-action="Index"><i class="fa fa-user mr-3"></i>Business customers</a>
            </div>
        </div>
    </header>
    <main class="mx-lg-5 pt-5">
        <div class="container-fluid">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2018 - WoodGrove</p>
            </footer>
        </div>
    </main>
    <environment include="Development">
        <script src="https://code.jquery.com/jquery-3.2.1.slim.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.0/js/mdb.js"></script>
        <script src="~/js/script.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
                asp-fallback-src="https://code.jquery.com/jquery-3.2.1.slim.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
                asp-fallback-src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.popper">
        </script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"
                asp-fallback-src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.0/js/mdb.min.js"></script>
        <script src="~/js/script.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
